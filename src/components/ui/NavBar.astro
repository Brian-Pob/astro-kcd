---
import ThemeSwitcher from './ThemeSwitcher';

const links = [
  { label: 'Portfolio', url: '/portfolio/' },
  { label: 'Blog', url: '/blog/' },
  { label: 'About', url: '/about/' },
  { label: 'Contact', url: '/contact/' },
];
---

<nav>
  <a class='site-title' href='/'>Astro KCD</a>
  <ul>
    {
      links.map((link) => {
        return (
          <li>
            <a href={link.url}>{link.label}</a>
          </li>
        );
      })
    }
  </ul>
  <div>
    <ThemeSwitcher client:load />
  </div>
</nav>

<style lang='scss'>
  nav {
    position: sticky;
    top: 0;
    z-index: 1;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;

    padding: 5vw 3rem;

    & a {
      color: var(--text);
      text-decoration: none;
    }
  }

  .site-title {
    font-size: 1.5rem;
  }

  ul {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    gap: 2rem;
    padding: 0;
  }

  li {
    list-style: none;
  }
</style>
